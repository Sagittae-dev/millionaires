<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.Milionerzy.FullscreenContainer"
    tools:context=".settings.SettingsActivity">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Settings"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle" />

    <TextView
        android:id="@+id/wrongTypeOfNewPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong password (no spaces, length = (6, 12) )"
        android:textColor="#FD0303"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/saveNewPasswordButton"
        app:layout_constraintEnd_toEndOf="@id/newPasswordEditText"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/newPasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

    <TextView
        android:id="@+id/passwordChangedCorrectlyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password changed correctly ! "
        android:textColor="#2CFB08"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/saveNewPasswordButton"
        app:layout_constraintEnd_toEndOf="@id/newPasswordEditText"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/newPasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

    <Button
        android:id="@+id/saveNewPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save new password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wrongTypeOfNewPasswordTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>